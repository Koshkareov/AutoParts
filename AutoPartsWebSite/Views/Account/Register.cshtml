@model IdentityAutoPart.Models.RegisterViewModel
@{
    ViewBag.Title = "РЕГИСТРАЦИЯ НОВОГО ПОЛЬЗОВАТЕЛЯ";
}
	<DIV class="main-text">

	<h2 id="cntr">@ViewBag.Title</h2>

	<div class="reg-form">
	<br>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
	
	@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder="ИМЯ" })
	@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder="ФАМИЛИЯ" })
	@Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder="ТЕЛЕФОН" })
	@Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder="E-MAIL" })
	@Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder="ПАРОЛЬ" })
	@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder="ПОДТВЕРДИТЬ ПАРОЛЬ" })
	<input type="submit" class="btn btn-default" value="ЗАРЕГИСТРИРОВАТЬ" />
	
}

	</DIV>
	</DIV>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
