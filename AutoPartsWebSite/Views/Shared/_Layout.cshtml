<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ALFA PARTS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ALFA PARTS", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Поиск", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>                                       
                    @*<li>@Html.Action("Заказы", "Index", "Orders")</li>*@
                </ul> 
                
                
                @Html.Partial("_LoginPartial")

                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated && User.IsInRole("RegistredUser"))
                    {                                            
                        <li>@Html.Action("CartSummary", "Carts")</li>
                        <li>@Html.ActionLink("Заказы", "Index", "Orders")</li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a class="dropdown-toggle"
                                   data-toggle="dropdown"
                                   href="#">
                                    Админ
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- links -->
                                    <li>@Html.ActionLink("Роли", "Index", "RolesAdmin")</li>
                                    <li>@Html.ActionLink("Пользователи", "Index", "UsersAdmin")</li>
                                    <li>@Html.ActionLink("Заказы", "Index", "OrdersAdmin")</li>
                                </ul>
                            </li>
                        </ul>
                    }
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ALFA PARTS TRADING FZE.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
