@model IdentityAutoPart.Models.ApplicationUser

@{
    ViewBag.Title = "Просмотр";
}

<h2>Просмотр</h2>

<div>
    <h4>Данные пользователя.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MoneyLimit)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MoneyLimit)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SearchLimit)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SearchLimit)
        </dd>
    </dl>
</div>
<h4>Список ролей этого пользователя</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>У этого пользователя нет ролей.</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Изменить", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Вернутся к списку", "Index")
</p>



