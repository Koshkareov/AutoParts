@model IdentityAutoPart.Models.RegisterViewModel
@{
    ViewBag.Title = "Добавление нового пользователя";
}

	<DIV class="main-text">

	<h1 id="cntr">@ViewBag.Title</h1>

	<div class="reg-form">
	<br>

@using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-error" })
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder="E-Mail" })
        </div>
    </div>
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder="ИМЯ" })
        </div>
    </div>
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder="ФАМИЛИЯ" })
        </div>
    </div>
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder="НОМЕР ТЕЛЕФОНА" })
        </div>
    </div>
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MoneyLimit, new { @class = "form-control", type = "number", min = "0", placeholder="ЛИМИТ" })
        </div>
    </div>
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SearchLimit, new { @class = "form-control", type = "number", min = "1", placeholder="ПОИСК ПОЗИЦИЙ" })
        </div>
    </div>
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder="ПАРОЛЬ" })
        </div>
    </div>
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder="ПОДТВЕРЖДЕНИЕ ПАРОЛЯ" })
        </div>
    </div>
	<br>
    <div class="form-group">
        <label class="col-md-2 control-label">
            Выбрать роль пользователя:
        </label>
        <ul id="lft">
		
            @foreach (var item in (SelectList)ViewBag.RoleId)
            {
                <li id="ol50"><input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                @Html.Label(item.Value, new { @class = "control-label" })
				</li>
            }
        </ul>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="ДОБАВИТЬ" />
        </div>
    </div>
}
</div>
<div id="cntr">
	<br>
    @Html.ActionLink("Назад", "Index")
</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
